{% extends 'admin/base.twig' %}


{% block content %}
    <main>
        <div class="container-fluid">
            <h1 class="mt-5">Admin Paneline Hoş Geldiniz</h1><hr>
            <div class="alert alert-secondary" role="alert">
                <h5>Sitenizi yönetmek için sol taraftaki menüyü kullanabilirisiniz.</h5>
            </div>
        </div>
        <table class="table table-bordered mt-4" id="dataTable" width="100%" cellspacing="0">
            <thead class="thead-dark">
            <tr>
                <th scope="col" class="text-center" width="98px">Blog ID</th>
                <th scope="col" class="text-center" width="110px">Blog Başlık</th>
                <th scope="col" class="text-center">Blog İçerik</th>
                <th scope="col" class="text-center" width="95px">Blog Tarih</th>
                <th scope="col" class="text-center" width="90px">Blog Yazar</th>
            </tr>
            </thead>
            <tbody>

            {% for blog in blogs %}
                <tr>
                    <th class="text-center">{{ blog.id }}</th>
                    <td class="text-center">{{ blog.title }}</td>
                    <td class="text-center">İçeriğe ulaşmak için <a href="/admin/blog/update_content/{{ blog.id }}"><b class="text-dark">tıklayınız.</b></a></td>
                    <td class="text-center">{{ blog.createdAt|date('Y-m-d') }}</td>
                    <td class="text-center">{{ blog.user.name ~ ' ' ~ blog.user.lastname}}</td>
                </tr>
            {% endfor %}



            </tbody>
        </table>
    </main>
{% endblock %}