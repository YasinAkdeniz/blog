{% extends 'admin/base.twig' %}


{% block content %}
    <main>
        <div class="container-fluid">
            <h1 class="mt-5">Ayarlar</h1><hr>
            <div class="alert alert-secondary" role="alert">
                <h5>Genel Ayarlar</h5>
                {% if message %}
                    <small><b style='color:green;'>{{ message }}</b></small>
                {% endif %}
            </div>
        </div>
        <div class="container">
            <form class="form-horizontal" action="" method="post">
                <div class="form-group row">
                    <label class="control-label col-sm-2" for="email">Site Adresi:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="site_url" value="{{ settings|value('site_url') }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-sm-2" for="email">Site Başlığı:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="title" value="{{ settings|value('title') }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-sm-2" for="email">Site Açıklaması:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="description" value="{{ settings|value('description') }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-sm-2" for="email">Site Anahtar Kelimeler:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="keyword" value="{{ settings|value('keyword')}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-sm-2" for="email">Site Yazar:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="author" value="{{ settings|value('author') }}">
                    </div>
                </div>
                <div class="form-group mt-4" align="right">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" name="genelayarkaydet" class="btn btn-success">Güncelle</button>
                    </div>
                </div>
            </form>
        </div>
    </main>
{% endblock %}